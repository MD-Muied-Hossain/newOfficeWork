<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/popular_item_image"
                android:layout_margin="2dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/popular_movie_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                app:layout_constraintStart_toEndOf="@+id/popular_item_image"
                app:layout_constraintTop_toTopOf="@+id/popular_item_image">


                <TextView
                    android:id="@+id/popular_movie_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attack on titan"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/popular_item_image"
                    app:layout_constraintTop_toTopOf="@+id/popular_item_image" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@+id/popular_item_image"
                    app:layout_constraintTop_toBottomOf="@+id/popular_item_rating">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/popular_item_rating"
                        app:layout_constraintStart_toEndOf="@+id/popular_item_image"
                        app:layout_constraintTop_toTopOf="@+id/popular_item_rating"
                        app:srcCompat="@drawable/rating" />

                    <TextView
                        android:id="@+id/popular_item_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="8dp"
                        android:text="9/10 Ratings"
                        app:layout_constraintStart_toEndOf="@+id/img3"
                        app:layout_constraintTop_toBottomOf="@+id/popular_movie_item_name" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/movie_genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@+id/popular_item_image"
                    app:layout_constraintTop_toBottomOf="@+id/popular_item_rating">

                    <TextView
                        android:id="@+id/popular_item_genre1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/genre_background"
                        android:padding="5dp"
                        android:text="Action"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/popular_item_genre2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="7dp"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/genre_background"
                        android:padding="5dp"
                        android:text="Action"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/popular_item_genre3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="7dp"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/genre_background"
                        android:padding="5dp"
                        android:text="Action"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@+id/popular_item_image"
                    app:layout_constraintTop_toBottomOf="@+id/popular_item_rating">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/popular_item_duration"
                        app:layout_constraintEnd_toStartOf="@+id/popular_item_duration"
                        app:layout_constraintStart_toEndOf="@+id/popular_item_image"
                        app:layout_constraintTop_toTopOf="@+id/popular_item_duration"
                        app:srcCompat="@drawable/clock" />

                    <TextView
                        android:id="@+id/popular_item_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="1h22min"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:layout_constraintStart_toEndOf="@+id/popular_item_image"
                        app:layout_constraintTop_toBottomOf="@+id/movie_genres" />

                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>